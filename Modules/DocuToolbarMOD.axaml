<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="768" d:DesignHeight="48"
			 x:Class="Folio.Modules.DocuToolbarMOD">
	<DockPanel DockPanel.Dock="Left">

		<Separator Width="48"></Separator>

		<!-- Bottom Row 1 - Rich Text Tools -->

		<ToggleButton Checked="Click11" DockPanel.Dock="Left" Name="BTN11" MaxWidth="48" ToolTip.Tip="btn11">
			<Panel>
				<Image Width="32" Source="/Assets/Text-Editor-Icon-011b.jpg"/>
			</Panel>
		</ToggleButton>

		<ToggleButton Checked="Click12" DockPanel.Dock="Left" Name="BTN12" MaxWidth="48" ToolTip.Tip="btn12">

			<Panel>
				<Image Width="32" Source="/Assets/Text-Editor-Icon-012b.jpg"/>
			</Panel>
		</ToggleButton>

		<ToggleButton Checked="Click13" DockPanel.Dock="Left" Name="BTN13" MaxWidth="48" ToolTip.Tip="btn13">

			<Panel>
				<Image Width="32" Source="/Assets/Text-Editor-Icon-013b.jpg"/>
			</Panel>
		</ToggleButton>
