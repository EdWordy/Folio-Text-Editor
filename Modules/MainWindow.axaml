<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Folio.Modules"
		SizeToContent="WidthAndHeight"
		CanResize="False"
        mc:Ignorable="d"
        x:Class="Folio.MainWindow"
        Title="Folio">

	<StackPanel>
		<local:FileMenuToolbarMOD VerticalAlignment="Top" DataContext="{Binding FileMenuToolbarMOD}"/>
		<local:TextBoxMOD VerticalAlignment="Center" DataContext="{Binding TextBoxMOD}"/>
		<local:DocuToolbarMOD VerticalAlignment="Bottom" DataContext="{Binding DocuToolBarMOD}"/>
	</StackPanel>
</Window>


